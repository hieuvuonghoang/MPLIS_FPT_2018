@model AppCore.Models.QT_QUYTRINH

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Thông tin chi tiết quy trình</h3>
    </div>
    <div class="p-0 box-body">
        @Html.HiddenFor(model => model.QUYTRINHID)
        <div id="QTnavtabID">
            <ul class="nav nav-tabs nav-justified">
                <li id="quyTrinh-li1" class="active">
                    <a data-toggle="tab" href="#quyTrinh-tabID">Thông tin quy trình</a>
                </li>
                <li id="quyTrinh-li2">
                    <a data-toggle="tab" href="#quyTrinh-tabID">Sơ đồ quy trình</a>
                </li>
                <li id="quyTrinh-li3">
                    <a data-toggle="tab" href="#quyTrinh-tabID">Cấu hình xử lý</a>
                </li>
            </ul>
            <div id="quyTrinh-tabs-cont" class="tab-content">
                <div id="quyTrinh-tabID" class="tab-pane fade in active">
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#quyTrinh-li1').on('click', function () {
            $('#quyTrinh-tabID').css({ "height": "" });
            $.ajax({
                type: "POST",
                url: "/DiagramWorkflow/_QuyTrinh_TTQuyTrinh",
                dataType: "html",
                success: function (html) {
                    $('#quyTrinh-tabID').html(html);
                }
            })
        })
        $('#quyTrinh-li2').on('click', function () {
            $('#quyTrinh-tabID').css({ "height": "550px" });
            $.ajax({
                type: "POST",
                url: "/DiagramWorkflow/_QuyTrinh_SoDoQuyTrinh",
                dataType: "html",
                success: function (html) {
                    $('#quyTrinh-tabID').html(html);
                }
            })
        })
        $('#quyTrinh-li3').on('click', function () {
            $('#quyTrinh-tabID').css({ "height": "" });
            $.ajax({
                type: "POST",
                url: "/DiagramWorkflow/_QuyTrinh_CauHinhXuLy",
                dataType: "html",
                success: function (html) {
                    $('#quyTrinh-tabID').html(html);
                }
            })
        })
        $('#quyTrinh-li1').click();
    })
</script>
